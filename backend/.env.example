# Server
PORT=48920
ENVIRONMENT=development

# Database
DATABASE_PATH=data/schedule.db

# CORS Configuration
# Comma-separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Scraper
SCRAPER_CONCURRENCY=4

# Jobs Service (background scraping and maintenance)
JOBS_ENABLED=true
JOBS_ACTIVE_SCRAPE_HOURS=8       # Hours between active registration term scrapes
JOBS_DAILY_SCRAPE_HOUR=3         # Hour (0-23) for daily pre-registration scrapes
JOBS_LOG_RETENTION_DAYS=90       # Days to keep logs before pruning
JOBS_PAST_TERM_YEARS=5           # Years of past terms to scrape

